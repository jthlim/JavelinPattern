static void (*CreateDynamicOpcodeTest(int value))()
{
  Javelin::Assembler assembler;

  »   j 2f
  » 1:
  »   addi a0, {value}
  »   ret
  » 2:
  »   j 1b
  
  return (void(*)()) assembler.Build();
}

